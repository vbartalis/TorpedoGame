<Window x:Class="torpedo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:torpedo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" VerticalAlignment="Top" Background="Gray">
                <Button Tag="MyButton2" Click="Button1_Click" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Single Player"/>
                <Button Tag="MyButton3" Click="Button2_Click" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Multi Player"/>
                <Button Tag="MyButton4" Click="Button3_Click" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Records"/>
            </StackPanel>
            <Frame x:Name="MainFrame" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>


        </StackPanel>

    </Grid>
</Window>
